  <form name="join_form" action="/?_method=PUT" method="POST">
    <p></p>
    <p></p>
    <p></p>
    <p></p>
    <div class="wrapper">
      <% for (var i=0; i < productInfo.length; i ++) { %>
        <div class='item'>
          <img class="img" src=<%=productInfo[i].productImageLink %> width="200" height="200" alt="My Image">
          <div class="name">
            <%= productInfo[i].productName %>
          </div>
          <div class="detail">
            <%= productInfo[i].prodcutDetail %>
          </div>
          <div class="price">
            Price <%= productInfo[i].productPrice %>
          </div>
          <a href=<%=productInfo[i].productDetailPagePath %> class="btn btn-primary">상세보기</a>
        </div>
        <% } %>`
    </div>
  </form>
