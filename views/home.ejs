  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
    integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js"
    integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
    crossorigin="anonymous"></script>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"
    integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <title>oneshopping</title>

  <style>
    .banner {
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
      width: 100%;
      margin-bottom: 4%;
    }

    .cate {
      width: 50%;
      transition: 0.5s;
      position: relative;
    }

    .bannerimg {
      width: 100%;

    }

    #explain {
      position: absolute;
      width: 500px;
      opacity: 0;
      font-size: 5rem;
      text-align: center;
      top:35%;
      left: 25%;
      font-weight: 500;
      color: white;
    }

    .cate:hover .bannerimg {
      opacity: 1;
      cursor: pointer;
      filter: brightness(0.9);
    }

    .cate:hover #explain {
      opacity: 1;
    }

    .wrapper {
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
      width: 100%;
    }

    .item {
      width: 25%;
      height: 100%;
      margin-bottom: 4%;
      padding: 0 20px 0 20px;
    }

    .img {
      width: 100%;
      height: 60%;
      transition: 0.5s;

      &:hover {
        cursor: pointer;
        filter: brightness(0.85);
      }
    }

    .name {
      font-size: 2rem;
      font-weight: 600;
      margin: 2%;

      &:hover {
        cursor: pointer;
        text-decoration: underline;
      }
    }

    .detail {
      font-size: 1.2rem;
      font-weight: 300;
      margin: 1%;

    }

    .price {
      font-size: 1.5rem;
      margin: 1%
    }

    .btn {
      background-color: gray;
      border-color: gray;
      margin-left: 35%;
      margin-top: 10px;

      &:hover {
        cursor: pointer;
        background-color: black;
      }
    }
  </style>
</head>

<body>
  <nav class="navbar bg-body-tertiary">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">
        <img
          src="https://res.cloudinary.com/crunchbase-production/image/upload/c_lpad,f_auto,q_auto:eco,dpr_1/v1413108467/xct18mxnvlunip4gnm62.png"
          alt="Logo" width="200" height="70" class="d-inline-block align-text-center">
        &nbsp;&nbsp;&nbsp;
      </a>


      <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
          <a class="navbar-brand" href="./home">Home</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
            aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse justify-content-end" id="navbarNavDropdown">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="#">Products</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="./cart">Cart</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="./loginDefault">Login</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="./editMyData">MyPage</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="./adminLoginDefault">AdminLogin</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="./adminPage">AdminPage</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </div>

  </nav>
  <div class="banner">
    <div class="cate">
      <img class="bannerimg" src="https://simage-kr.uniqlo.com/display/corner/2162/PC_L1_hero_1_230630.jpg">
      <div id='explain'>MEN</div>
    </div>
    <div class="cate">
      <img class="bannerimg" src="https://simage-kr.uniqlo.com/display/corner/2162/PC_L1_hero_2_230630.jpg">
      <div id='explain'>WOMEN</div>
    </div>
    <div class="cate">
      <img class="bannerimg" src="https://simage-kr.uniqlo.com/display/corner/2162/PC_L1_PICKUP_4_4_230428.jpg">
      <div id='explain'>KIDS</div>
    </div>
    <div class="cate">
      <img class="bannerimg" src="https://simage-kr.uniqlo.com/display/corner/2162/PC_L2_B_MAIN_230324.jpg">
      <div id='explain'>BABY</div>
    </div>


